{
  "routes": [
    {
      "route": "/.auth/login/twitter",
      "statusCode": 404
    },
    {
      "route": "/.auth/login/github",
      "statusCode": 404
    },
    {
      "route": "/_nuxt/*.{js,css,png,jpg}", 
      "allowedRoles" : ["anonymous", "authenticated"]
    },
    {
      "route": "/api/*", 
      "allowedRoles" : ["authenticated"],
      "statusCode": 403
    },
    {
      "route": "*", 
      "allowedRoles" : ["authenticated"]
    }
  ],
  "responseOverrides": {
    "401": {
      "statusCode": 302,
      "redirect": "/.auth/login/aad"
    }
  }
}